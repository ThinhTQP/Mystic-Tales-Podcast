@model ModerationService.BusinessLogic.Models.Mail.DMCACounterNoticeValidToAccuserMailViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DMCA Counter Notice Filed - Mystic Tales Podcast</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            color: #e8e8e8;
            line-height: 1.6;
            padding: 20px;
            min-height: 100vh;
        }

        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background: linear-gradient(145deg, #2c2c54 0%, #40407a 100%);
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            overflow: hidden;
            border: 1px solid #4a4a6a;
        }

        .header {
            background: linear-gradient(135deg, #ff6b6b 0%, #ffa726 100%);
            padding: 30px;
            text-align: center;
            position: relative;
        }

            .header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="30" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="30" cy="70" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="70" cy="80" r="2.5" fill="rgba(255,255,255,0.1)"/></svg>');
            }

        .logo {
            font-size: 28px;
            font-weight: bold;
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
            z-index: 1;
        }

        .subtitle {
            color: rgba(255,255,255,0.9);
            font-size: 14px;
            margin-top: 5px;
            position: relative;
            z-index: 1;
        }

        .content {
            padding: 40px 30px;
        }

        .greeting {
            font-size: 24px;
            color: #ffa726;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .user-name {
            color: #ff6b6b;
            font-weight: 600;
        }

        .message {
            color: #d0d0d0;
            margin-bottom: 15px;
            font-size: 16px;
        }

        .notification-box {
            background: linear-gradient(145deg, #e74c3c 10%, #c0392b 100%);
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            border: 1px solid #c0392b;
            text-align: center;
            box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
        }

        .notification-title {
            color: #fff;
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }

        .notification-message {
            color: #fff;
            font-size: 16px;
            line-height: 1.5;
            margin-bottom: 15px;
        }

        .attachment-section {
            background: linear-gradient(145deg, #3c3c6e 0%, #4a4a7a 100%);
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            border: 1px solid #5a5a8a;
        }

        .attachment-title {
            color: #ffa726;
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
            text-align: center;
        }

        .attachment-list {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            padding: 20px;
            margin: 15px 0;
        }

            .attachment-list ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

            .attachment-list li {
                margin-bottom: 10px;
                padding: 10px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 6px;
                border-left: 3px solid #ffa726;
            }

            .attachment-list a {
                color: #87ceeb;
                text-decoration: none;
                font-weight: 500;
                word-break: break-all;
                transition: color 0.3s ease;
            }

                .attachment-list a:hover {
                    color: #fff;
                    text-decoration: underline;
                }

        .no-attachments {
            text-align: center;
            color: #b0b0b0;
            font-style: italic;
            padding: 20px;
        }

        .warning-box {
            background: rgba(255, 193, 7, 0.15);
            border: 1px solid #ffc107;
            border-radius: 8px;
            padding: 20px;
            margin: 25px 0;
        }

        .warning-title {
            color: #ffc107;
            font-weight: 700;
            margin-bottom: 10px;
            font-size: 16px;
        }

        .warning-text {
            color: #fff3cd;
            font-size: 14px;
            line-height: 1.5;
        }

        .footer {
            background: linear-gradient(145deg, #1a1a2e 0%, #2c2c54 100%);
            padding: 25px 30px;
            text-align: center;
            border-top: 1px solid #4a4a6a;
        }

        .signature {
            color: #b0b0b0;
            font-style: italic;
        }

        .team-name {
            color: #ffa726;
            font-weight: 600;
        }

        @@media (max-width: 600px) {
            .email-container {
                margin: 10px;
                border-radius: 10px;
            }

            .content {
                padding: 25px 20px;
            }

            .header {
                padding: 20px;
            }

            .logo {
                font-size: 24px;
            }

            .notification-box, .attachment-section, .warning-box {
                padding: 20px 15px;
            }

            .notification-title {
                font-size: 18px;
            }
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="header">
            <div class="logo">Mystic Tales Podcast</div>
            <div class="subtitle">Discover the world of mysterious audio</div>
        </div>

        <div class="content">
            <div class="greeting">Dear <span class="user-name">@Model.AccuserFullName</span>,</div>

            <div class="notification-box">
                <div class="notification-title">DMCA Counter Notice Filed</div>
                <div class="notification-message">
                    We are writing to inform you that a valid DMCA counter notice has been filed against your DMCA takedown request.
                </div>
            </div>

            <p class="message">
                According to the Digital Millennium Copyright Act (DMCA), we are required to notify you when a counter notice is submitted for content that was previously removed due to your copyright claim.
            </p>

            @if (Model.AttachmentFileUrls != null && Model.AttachmentFileUrls.Any())
            {
                <div class="attachment-section">
                    <div class="attachment-title">Counter Notice Documentation</div>
                    <div class="attachment-list">
                        <p style="color: #d0d0d0; margin-bottom: 15px; text-align: center;">
                            The following documents were submitted as part of the counter notice:
                        </p>
                        <ul>
                            @foreach (var fileUrl in Model.AttachmentFileUrls)
                            {
                                <li>
                                    <a href="@fileUrl" target="_blank">@fileUrl</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <div class="attachment-section">
                    <div class="attachment-title">Counter Notice Documentation</div>
                    <div class="no-attachments">
                        No additional documentation was provided with this counter notice.
                    </div>
                </div>
            }

            <div class="warning-box">
                <div class="warning-title">⚠️ Important Legal Notice</div>
                <div class="warning-text">
                    <strong>Next Steps:</strong><br />
                    • Unless you file a lawsuit within 10-14 business days, the previously removed content may be restored<br />
                    • You have the right to file a lawsuit to seek a court order restraining the alleged infringer<br />
                    • Please consult with legal counsel if you wish to pursue further action<br />
                    • This notification is provided in compliance with DMCA requirements
                </div>
            </div>

            <p class="message">
                If you believe the counter notice is invalid or if you wish to pursue legal action, please contact your legal representative immediately. For any questions about this process, please contact our legal team.
            </p>
        </div>

        <div class="footer">
            <p class="signature">
                Sincerely,<br />
                <span class="team-name">Mystic Tales Podcast Legal Team</span>
            </p>
        </div>
    </div>
</body>
</html>