@model ModerationService.BusinessLogic.Models.Mail.DMCALawsuitProofValidToAccusedMailViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Legal Action Notice - Mystic Tales Podcast</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            color: #e8e8e8;
            line-height: 1.6;
            padding: 20px;
            min-height: 100vh;
        }

        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background: linear-gradient(145deg, #2c2c54 0%, #40407a 100%);
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            overflow: hidden;
            border: 1px solid #4a4a6a;
        }

        .header {
            background: linear-gradient(135deg, #ff6b6b 0%, #ffa726 100%);
            padding: 30px;
            text-align: center;
            position: relative;
        }

            .header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="30" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="30" cy="70" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="70" cy="80" r="2.5" fill="rgba(255,255,255,0.1)"/></svg>');
            }

        .logo {
            font-size: 28px;
            font-weight: bold;
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
            z-index: 1;
        }

        .subtitle {
            color: rgba(255,255,255,0.9);
            font-size: 14px;
            margin-top: 5px;
            position: relative;
            z-index: 1;
        }

        .content {
            padding: 40px 30px;
        }

        .greeting {
            font-size: 24px;
            color: #ffa726;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .user-name {
            color: #ff6b6b;
            font-weight: 600;
        }

        .message {
            color: #d0d0d0;
            margin-bottom: 15px;
            font-size: 16px;
        }

        .urgent-alert-box {
            background: linear-gradient(145deg, #8b0000 10%, #600000 100%);
            border: 2px solid #ff0000;
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            text-align: center;
            box-shadow: 0 8px 25px rgba(255, 0, 0, 0.4);
            animation: urgentPulse 2s ease-in-out infinite alternate;
        }

        @@keyframes urgentPulse {
            from {
                box-shadow: 0 8px 25px rgba(255, 0, 0, 0.4);
            }

            to {
                box-shadow: 0 8px 35px rgba(255, 0, 0, 0.6);
            }
        }

        .urgent-title {
            color: #fff;
            font-size: 22px;
            font-weight: 800;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .urgent-message {
            color: #fff;
            font-size: 17px;
            line-height: 1.6;
            font-weight: 600;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }

        .legal-notice-box {
            background: linear-gradient(145deg, #4a148c 10%, #6a1b9a 100%);
            border: 1px solid #9c27b0;
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            box-shadow: 0 4px 20px rgba(156, 39, 176, 0.3);
        }

        .legal-title {
            color: #fff;
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }

        .legal-text {
            color: #e1bee7;
            font-size: 16px;
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .evidence-section {
            background: linear-gradient(145deg, #3c3c6e 0%, #4a4a7a 100%);
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            border: 1px solid #5a5a8a;
        }

        .evidence-title {
            color: #ffa726;
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
            text-align: center;
        }

        .evidence-list {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            padding: 20px;
            margin: 15px 0;
        }

            .evidence-list ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

            .evidence-list li {
                margin-bottom: 10px;
                padding: 10px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 6px;
                border-left: 3px solid #ffa726;
            }

            .evidence-list a {
                color: #87ceeb;
                text-decoration: none;
                font-weight: 500;
                word-break: break-all;
                transition: color 0.3s ease;
            }

                .evidence-list a:hover {
                    color: #fff;
                    text-decoration: underline;
                }

        .no-evidence {
            text-align: center;
            color: #b0b0b0;
            font-style: italic;
            padding: 20px;
        }

        .immediate-action-box {
            background: linear-gradient(145deg, #d32f2f 10%, #b71c1c 100%);
            border: 1px solid #f44336;
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            box-shadow: 0 4px 20px rgba(244, 67, 54, 0.3);
        }

        .action-title {
            color: #fff;
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }

        .action-text {
            color: #ffcdd2;
            font-size: 15px;
            line-height: 1.6;
            margin-bottom: 10px;
        }

        .consequences-box {
            background: linear-gradient(145deg, #bf360c 10%, #ff3d00 100%);
            border: 1px solid #ff5722;
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            box-shadow: 0 4px 20px rgba(255, 87, 34, 0.3);
        }

        .consequences-title {
            color: #fff;
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }

        .consequences-text {
            color: #ffccbc;
            font-size: 15px;
            line-height: 1.6;
            margin-bottom: 10px;
        }

        .timeline-critical-box {
            background: linear-gradient(145deg, #1a237e 10%, #303f9f 100%);
            border: 1px solid #3f51b5;
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            box-shadow: 0 4px 20px rgba(63, 81, 181, 0.3);
        }

        .timeline-title {
            color: #fff;
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }

        .timeline-text {
            color: #c5cae9;
            font-size: 15px;
            line-height: 1.6;
        }

        .footer {
            background: linear-gradient(145deg, #1a1a2e 0%, #2c2c54 100%);
            padding: 25px 30px;
            text-align: center;
            border-top: 1px solid #4a4a6a;
        }

        .signature {
            color: #b0b0b0;
            font-style: italic;
        }

        .team-name {
            color: #ffa726;
            font-weight: 600;
        }

        @@media (max-width: 600px) {
            .email-container {
                margin: 10px;
                border-radius: 10px;
            }

            .content {
                padding: 25px 20px;
            }

            .header {
                padding: 20px;
            }

            .logo {
                font-size: 24px;
            }

            .urgent-alert-box, .legal-notice-box, .evidence-section,
            .immediate-action-box, .consequences-box, .timeline-critical-box {
                padding: 20px 15px;
            }

            .urgent-title {
                font-size: 20px;
            }

            .urgent-message, .legal-text, .action-text,
            .consequences-text, .timeline-text {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="header">
            <div class="logo">Mystic Tales Podcast</div>
            <div class="subtitle">Discover the world of mysterious audio</div>
        </div>

        <div class="content">
            <div class="greeting">Dear <span class="user-name">@Model.PodcasterFullName</span>,</div>

            <div class="urgent-alert-box">
                <div class="urgent-title">üö® URGENT LEGAL NOTICE üö®</div>
                <div class="urgent-message">
                    A lawsuit has been filed against you regarding your previously challenged content. This is a formal legal proceeding that requires immediate attention.
                </div>
            </div>

            <div class="legal-notice-box">
                <div class="legal-title">‚öñÔ∏è Legal Proceedings Initiated</div>
                <div class="legal-text">
                    <strong>Status:</strong> The copyright holder has filed legal action following their DMCA takedown notice and your counter-notice submission.<br /><br />
                    <strong>Context:</strong> According to the Digital Millennium Copyright Act (DMCA) process, when a counter-notice is disputed, the copyright holder may pursue legal action in federal court to resolve the matter definitively.
                </div>
            </div>

            <p class="message">
                This notification serves as formal notice that legal proceedings have been initiated against you. The matter has now escalated beyond our platform's DMCA process and is being handled through the court system.
            </p>

            @if (Model.AttachmentFileUrls != null && Model.AttachmentFileUrls.Any())
            {
                <div class="evidence-section">
                    <div class="evidence-title">Legal Documentation Filed</div>
                    <div class="evidence-list">
                        <p style="color: #d0d0d0; margin-bottom: 15px; text-align: center;">
                            The following legal documents and evidence have been submitted in this case:
                        </p>
                        <ul>
                            @foreach (var fileUrl in Model.AttachmentFileUrls)
                            {
                                <li>
                                    <a href="@fileUrl" target="_blank">@fileUrl</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <div class="evidence-section">
                    <div class="evidence-title">Legal Documentation</div>
                    <div class="no-evidence">
                        Additional case documentation may be available through the court system or your legal representative.
                    </div>
                </div>
            }

            <div class="immediate-action-box">
                <div class="action-title">üî• IMMEDIATE ACTION REQUIRED</div>
                <div class="action-text">
                    <strong>You must take immediate legal action:</strong><br />
                    ‚Ä¢ <strong>Contact a copyright attorney immediately</strong> - This case requires specialized legal expertise<br />
                    ‚Ä¢ <strong>Respond to all court filings</strong> - Failure to respond may result in a default judgment against you<br />
                    ‚Ä¢ <strong>Gather your evidence and documentation</strong> - Prepare your defense materials<br />
                    ‚Ä¢ <strong>Do not ignore this notice</strong> - Legal deadlines are strict and non-negotiable
                </div>
            </div>

            <div class="consequences-box">
                <div class="consequences-title">‚ö†Ô∏è Potential Legal Consequences</div>
                <div class="consequences-text">
                    <strong>If you do not respond appropriately:</strong><br />
                    ‚Ä¢ <strong>Default judgment</strong> may be entered against you<br />
                    ‚Ä¢ <strong>Monetary damages</strong> including actual damages and profits<br />
                    ‚Ä¢ <strong>Statutory damages</strong> up to $150,000 per work infringed<br />
                    ‚Ä¢ <strong>Attorney's fees</strong> may be awarded to the plaintiff<br />
                    ‚Ä¢ <strong>Permanent injunction</strong> preventing future use of the material<br />
                    ‚Ä¢ <strong>Additional legal costs</strong> and court fees
                </div>
            </div>

            <div class="timeline-critical-box">
                <div class="timeline-title">‚è∞ Critical Timeline Information</div>
                <div class="timeline-text">
                    <strong>Legal Response Time:</strong> You typically have <strong>20-30 days</strong> from being served to respond to the lawsuit.<br /><br />
                    <strong>Court Jurisdiction:</strong> The case will be heard in the appropriate federal district court as determined by the plaintiff's filing.<br /><br />
                    <strong>Service of Process:</strong> You may receive official court documents separately through formal legal service.
                </div>
            </div>

            <p class="message">
                <strong>Important:</strong> Mystic Tales Podcast is not a party to this legal action and cannot provide legal advice. We strongly recommend consulting with a qualified intellectual property attorney immediately. This notice is provided for informational purposes only as part of our platform obligations.
            </p>

            <p class="message">
                Your content will remain removed from our platform until this legal matter is resolved through the court system. We will cooperate with any valid court orders or legal requirements in this matter.
            </p>
        </div>

        <div class="footer">
            <p class="signature">
                Respectfully,<br />
                <span class="team-name">Mystic Tales Podcast Legal Compliance Team</span>
            </p>
        </div>
    </div>
</body>
</html>