@model UserService.BusinessLogic.Models.Mail.PodcasterRequestResultMailViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Podcaster Application Result - Mystic Tales Podcast</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            color: #e8e8e8;
            line-height: 1.6;
            padding: 20px;
            min-height: 100vh;
        }
        
        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background: linear-gradient(145deg, #2c2c54 0%, #40407a 100%);
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            overflow: hidden;
            border: 1px solid #4a4a6a;
        }
        
        .header {
            background: linear-gradient(135deg, #ff6b6b 0%, #ffa726 100%);
            padding: 30px;
            text-align: center;
            position: relative;
        }
        
        .header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="30" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="30" cy="70" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="70" cy="80" r="2.5" fill="rgba(255,255,255,0.1)"/></svg>');
        }
        
        .logo {
            font-size: 28px;
            font-weight: bold;
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
            z-index: 1;
        }
        
        .subtitle {
            color: rgba(255,255,255,0.9);
            font-size: 14px;
            margin-top: 5px;
            position: relative;
            z-index: 1;
        }
        
        .content {
            padding: 40px 30px;
        }
        
        .greeting {
            font-size: 24px;
            color: #ffa726;
            margin-bottom: 20px;
            font-weight: 600;
        }
        
        .user-name {
            color: #ff6b6b;
            font-weight: 600;
        }
        
        .message {
            color: #d0d0d0;
            margin-bottom: 15px;
            font-size: 16px;
        }
        
        .result-section {
            background: linear-gradient(145deg, #3c3c6e 0%, #4a4a7a 100%);
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            border: 1px solid #5a5a8a;
            text-align: center;
        }
        
        .result-title {
            color: #ffa726;
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
        }
        
        .status-approved {
            display: inline-block;
            background: linear-gradient(135deg, #4caf50 0%, #8bc34a 100%);
            color: #fff;
            font-size: 18px;
            font-weight: bold;
            padding: 15px 30px;
            border-radius: 25px;
            margin: 10px 0;
            box-shadow: 0 8px 20px rgba(76, 175, 80, 0.3);
            text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
        }
        
        .status-rejected {
            display: inline-block;
            background: linear-gradient(135deg, #f44336 0%, #e91e63 100%);
            color: #fff;
            font-size: 18px;
            font-weight: bold;
            padding: 15px 30px;
            border-radius: 25px;
            margin: 10px 0;
            box-shadow: 0 8px 20px rgba(244, 67, 54, 0.3);
            text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
        }
        
        .success-section {
            background: rgba(76, 175, 80, 0.1);
            border-left: 4px solid #4caf50;
            padding: 20px;
            margin: 20px 0;
            border-radius: 0 8px 8px 0;
            color: #c8e6c9;
        }
        
        .rejection-section {
            background: rgba(244, 67, 54, 0.1);
            border-left: 4px solid #f44336;
            padding: 20px;
            margin: 20px 0;
            border-radius: 0 8px 8px 0;
            color: #ffcdd2;
        }
        
        .next-steps {
            background: rgba(255, 193, 7, 0.1);
            border-left: 4px solid #ffc107;
            padding: 20px;
            margin: 20px 0;
            border-radius: 0 8px 8px 0;
            color: #fff3cd;
        }
        
        .steps-list {
            margin: 15px 0;
            padding-left: 20px;
        }
        
        .steps-list li {
            margin-bottom: 8px;
            color: #fff3cd;
        }
        
        .footer {
            background: linear-gradient(145deg, #1a1a2e 0%, #2c2c54 100%);
            padding: 25px 30px;
            text-align: center;
            border-top: 1px solid #4a4a6a;
        }
        
        .signature {
            color: #b0b0b0;
            font-style: italic;
        }
        
        .team-name {
            color: #ffa726;
            font-weight: 600;
        }
        
        @@media (max-width: 600px) {
            .email-container {
                margin: 10px;
                border-radius: 10px;
            }
            
            .content {
                padding: 25px 20px;
            }
            
            .header {
                padding: 20px;
            }
            
            .logo {
                font-size: 24px;
            }
            
            .status-approved, .status-rejected {
                font-size: 16px;
                padding: 12px 25px;
            }
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="header">
            <div class="logo">Mystic Tales Podcast</div>
            <div class="subtitle">Discover the world of mysterious audio</div>
        </div>
        
        <div class="content">
            <div class="greeting">Hello <span class="user-name">@Model.FullName</span>!</div>
            
            <p class="message">
                We have completed reviewing your application to become a Podcaster on the Mystic Tales Podcast platform. 
                Below is the result for account <strong>@Model.Email</strong>:
            </p>
            
            <div class="result-section">
                <div class="result-title">Review Result</div>
                @if (Model.IsVerified)
                {
                    <div class="status-approved">Approved</div>
                }
                else
                {
                    <div class="status-rejected">Rejected</div>
                }
            </div>
            
            @if (Model.IsVerified)
            {
                <div class="success-section">
                    <strong>Congratulations!</strong><br/>
                    Your application has been approved. You are now officially a member of the Mystic Tales Podcaster family! 
                    We are excited to hear the mysterious stories you will share.
                </div>
                
                <div class="next-steps">
                    <strong>Next Steps:</strong>
                    <ol class="steps-list">
                        <li>Log in to your account to access the Podcaster dashboard</li>
                        <li>Complete your profile and set up your podcast channel</li>
                        <li>Upload your first podcast</li>
                        <li>Start building your listener community</li>
                        <li>Explore analytics and content management tools</li>
                    </ol>
                </div>
                
                <p class="message">
                    We provide comprehensive guidance and support to help you start your podcasting journey easily. 
                    Get ready to create amazing audio content!
                </p>
            }
            else
            {
                <div class="rejection-section">
                    <strong>We're sorry!</strong><br/>
                    After careful consideration, we decided that we cannot approve your application at this time. 
                    This does not mean you cannot become a Podcaster in the future.
                </div>
                
                <div class="next-steps">
                    <strong>Improvement Suggestions:</strong>
                    <ul class="steps-list">
                        <li>Further develop your content ideas and plans</li>
                        <li>Prepare high-quality podcast demo samples</li>
                        <li>Enhance your communication and storytelling skills</li>
                        <li>Learn more about the mysterious podcast market</li>
                        <li>You may reapply after 3 months</li>
                    </ul>
                </div>
                
                <p class="message">
                    We encourage you to continue pursuing your passion and perfecting your skills. 
                    During this time, you can still enjoy thousands of quality podcasts on our platform.
                </p>
            }
        </div>
        
        <div class="footer">
            <p class="signature">
                Best regards,<br />
                <span class="team-name">Mystic Tales Podcast Team</span>
            </p>
        </div>
    </div>
</body>
</html>