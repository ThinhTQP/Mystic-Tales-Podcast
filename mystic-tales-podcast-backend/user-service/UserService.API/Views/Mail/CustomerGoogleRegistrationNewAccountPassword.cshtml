@model UserService.BusinessLogic.Models.Mail.CustomerGoogleRegistrationNewAccountPasswordMailViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Created - Mystic Tales Podcast</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            color: #e8e8e8;
            line-height: 1.6;
            padding: 20px;
            min-height: 100vh;
        }
        
        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background: linear-gradient(145deg, #2c2c54 0%, #40407a 100%);
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            overflow: hidden;
            border: 1px solid #4a4a6a;
        }
        
        .header {
            background: linear-gradient(135deg, #ff6b6b 0%, #ffa726 100%);
            padding: 30px;
            text-align: center;
            position: relative;
        }
        
        .header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="30" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="30" cy="70" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="70" cy="80" r="2.5" fill="rgba(255,255,255,0.1)"/></svg>');
        }
        
        .logo {
            font-size: 28px;
            font-weight: bold;
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
            z-index: 1;
        }
        
        .subtitle {
            color: rgba(255,255,255,0.9);
            font-size: 14px;
            margin-top: 5px;
            position: relative;
            z-index: 1;
        }
        
        .content {
            padding: 40px 30px;
        }
        
        .greeting {
            font-size: 24px;
            color: #ffa726;
            margin-bottom: 20px;
            font-weight: 600;
        }
        
        .user-name {
            color: #ff6b6b;
            font-weight: 600;
        }
        
        .message {
            color: #d0d0d0;
            margin-bottom: 15px;
            font-size: 16px;
        }
        
        .password-section {
            background: linear-gradient(145deg, #3c3c6e 0%, #4a4a7a 100%);
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            border: 1px solid #5a5a8a;
            text-align: center;
        }
        
        .password-title {
            color: #ffa726;
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
        }
        
        .password-display {
            display: inline-block;
            background: linear-gradient(135deg, #ff6b6b 0%, #ffa726 100%);
            color: #fff;
            font-size: 28px;
            font-weight: bold;
            padding: 20px 35px;
            border-radius: 15px;
            letter-spacing: 3px;
            margin: 15px 0;
            box-shadow: 0 8px 20px rgba(255, 107, 107, 0.3);
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            font-family: 'Courier New', monospace;
            word-break: break-all;
        }
        
        .account-info {
            background: linear-gradient(145deg, #3c3c6e 0%, #4a4a7a 100%);
            border-radius: 12px;
            padding: 20px;
            margin: 20px 0;
            border: 1px solid #5a5a8a;
        }
        
        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .info-row:last-child {
            border-bottom: none;
        }
        
        .info-label {
            color: #b0b0b0;
            font-weight: 500;
        }
        
        .info-value {
            color: #ffa726;
            font-weight: 600;
            word-break: break-all;
        }
        
        .info-box {
            background: rgba(255, 193, 7, 0.1);
            border-left: 4px solid #ffc107;
            padding: 15px;
            margin: 20px 0;
            border-radius: 0 8px 8px 0;
            color: #fff3cd;
        }
        
        .welcome-message {
            background: rgba(76, 175, 80, 0.1);
            border-left: 4px solid #4caf50;
            padding: 15px;
            margin: 20px 0;
            border-radius: 0 8px 8px 0;
            color: #c8e6c9;
        }
        
        .security-tip {
            background: rgba(244, 67, 54, 0.1);
            border-left: 4px solid #f44336;
            padding: 15px;
            margin: 20px 0;
            border-radius: 0 8px 8px 0;
            color: #ffcdd2;
        }
        
        .footer {
            background: linear-gradient(145deg, #1a1a2e 0%, #2c2c54 100%);
            padding: 25px 30px;
            text-align: center;
            border-top: 1px solid #4a4a6a;
        }
        
        .signature {
            color: #b0b0b0;
            font-style: italic;
        }
        
        .team-name {
            color: #ffa726;
            font-weight: 600;
        }
        
        @@media (max-width: 600px) {
            .email-container {
                margin: 10px;
                border-radius: 10px;
            }
            
            .content {
                padding: 25px 20px;
            }
            
            .header {
                padding: 20px;
            }
            
            .logo {
                font-size: 24px;
            }
            
            .password-display {
                font-size: 22px;
                letter-spacing: 2px;
                padding: 15px 20px;
            }
            
            .info-row {
                flex-direction: column;
                gap: 5px;
            }
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="header">
            <div class="logo">Mystic Tales Podcast</div>
            <div class="subtitle">Discover the world of mysterious audio</div>
        </div>
        
        <div class="content">
            <div class="greeting">Hello <span class="user-name">@Model.FullName</span>!</div>
            
            <div class="welcome-message">
                <strong>üéâ Welcome to Mystic Tales Podcast!</strong><br/>
                Your account has been successfully created via Google Sign-In. We're excited to have you join our community of mysterious podcast enthusiasts!
            </div>
            
            <p class="message">
                We've generated a secure password for your account. You can use this password to sign in with your email address if you prefer not to use Google Sign-In in the future.
            </p>
            
            <div class="account-info">
                <div class="info-row">
                    <span class="info-label">Email Address:</span>
                    <span class="info-value">@Model.Email</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Full Name:</span>
                    <span class="info-value">@Model.FullName</span>
                </div>
            </div>
            
            <div class="password-section">
                <div class="password-title">üîê Your Account Password</div>
                <p style="color: #d0d0d0; margin-bottom: 20px;">
                    Save this password securely - you'll need it to sign in
                </p>
                <div class="password-display">@Model.NewAccountPassword</div>
            </div>
            
            <div class="security-tip">
                <strong>üîí Security Recommendations:</strong><br/>
                ‚Ä¢ Please change this password after your first login<br/>
                ‚Ä¢ Store this password in a secure password manager<br/>
                ‚Ä¢ Never share your password with anyone<br/>
                ‚Ä¢ Enable two-factor authentication for extra security
            </div>
            
            <div class="info-box">
                <strong>üí° Getting Started:</strong><br/>
                ‚Ä¢ You can sign in using Google or your email + password<br/>
                ‚Ä¢ Explore thousands of mysterious and captivating podcasts<br/>
                ‚Ä¢ Create playlists and follow your favorite podcasters<br/>
                ‚Ä¢ Join our vibrant community of mystery enthusiasts
            </div>
            
            <p class="message">
                If you did not create this account or have any questions, please contact our support team immediately.
            </p>
        </div>
        
        <div class="footer">
            <p class="signature">
                Best regards,<br />
                <span class="team-name">Mystic Tales Podcast Team</span>
            </p>
        </div>
    </div>
</body>
</html>